# APKalypse Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Required: API Keys (at least one required)
# ===========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Azure OpenAI (required if using azure_openai provider)
AZURE_OPENAI_API_KEY=xxxxx
AZURE_OPENAI_ENDPOINT=https://xxxxx.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5.2

# ===========================================
# Required: Android SDK Configuration
# ===========================================
ANDROID_SDK_ROOT=C:\Users\algore\AppData\Local\Android\Sdk

# ===========================================
# Optional: Agent Configuration
# ===========================================
# LLM provider: "openai", "anthropic", or "azure_openai"
B2B_AGENT_PROVIDER=azure_openai

# Model to use (e.g., gpt-4o, claude-3-opus-20240229)
B2B_AGENT_MODEL=gpt-5.2

# Sampling temperature (0.0 to 2.0)
B2B_AGENT_TEMPERATURE=0.1

# ===========================================
# Optional: Emulator Configuration
# ===========================================
# Run emulator without display
B2B_EMULATOR_HEADLESS=false

# Android API level (26-35)
B2B_EMULATOR_API_LEVEL=33

# ===========================================
# Optional: Output Configuration
# ===========================================
# Output directory for generated projects
B2B_OUTPUT_PATH=./output

# Logging level: DEBUG, INFO, WARNING, ERROR
B2B_LOG_LEVEL=INFO

# ===========================================
# Optional: Compliance Configuration
# ===========================================
# Strict compliance mode (blocks on violations)
B2B_COMPLIANCE_STRICT=true
